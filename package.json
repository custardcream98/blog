{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "predev": "bash scripts/dev-post-submodule-link.sh",
    "dev": "concurrently -n \"Next.js,Post Watcher\" -c \"blue,green\" \"pnpm run dev:next\" \"pnpm run dev:submodule-watcher\"",
    "postdev": "rm -rf public/blog-posts && rm -rf .next",
    "dev:api": "USE_OCTOKIT_INSTEAD_OF_SUBMODULE=true pnpm run dev:next",
    "postdev:api": "pnpm run postdev",
    "dev:next": "next dev --turbopack",
    "dev:submodule-watcher": "tsx scripts/dev-submodule-watcher.mts",
    "create-subset-font": "tsx scripts/create-subset-font.ts",
    "build": "pnpm exec next telemetry disable && next build",
    "start": "next start",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "dependencies": {
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "clsx": "^2.1.1",
    "gray-matter": "^4.0.3",
    "image-size": "^2.0.2",
    "mdast-util-toc": "^7.1.0",
    "next": "15.5.0",
    "next-mdx-remote": "^5.0.0",
    "next-mdx-remote-client": "^2.1.3",
    "nodemailer": "^7.0.5",
    "octokit": "^5.0.3",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-hot-toast": "^2.5.2",
    "rehype-pretty-code": "^0.14.1",
    "rehype-slug": "^6.0.0",
    "shiki": "^3.8.1",
    "subset-font": "^2.4.0",
    "tailwind-merge": "^3.3.1",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/eslint-plugin-next": "^15.4.4",
    "@tailwindcss/postcss": "^4",
    "@types/mdast": "^4.0.4",
    "@types/node": "^20",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/subset-font": "^2.3.0",
    "@types/unist": "^3.0.3",
    "@types/ws": "^8.18.1",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4",
    "tsx": "^4.20.3",
    "typescript": "^5",
    "ws": "^8.18.3"
  }
}
